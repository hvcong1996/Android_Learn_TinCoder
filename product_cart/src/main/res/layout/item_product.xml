<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageViewProduct"
            android:src="@drawable/product_item"
            android:background="@color/background_color_product"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/linearLayoutProductInfo"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/imageViewProduct"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@id/imageViewCart"
            android:layout_marginRight="10dp"
            android:layout_width="270dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="Title"
                android:id="@+id/textViewProductName"
                android:textSize="30sp"
                android:textColor="#f000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Content"
                android:id="@+id/textViewProductDescription"
                android:textColor="#f000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/imageViewCart"
            android:src="@drawable/cart"
            android:background="@color/background_color_cart"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>